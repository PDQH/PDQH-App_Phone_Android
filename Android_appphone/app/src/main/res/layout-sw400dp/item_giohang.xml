<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_weight="3"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/select111"
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp" />

        <ImageView
            android:id="@+id/img_giohang"
            android:layout_width="151dp"
            android:layout_height="127dp"

            android:src="@drawable/iphone12xanhla" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_name_giohang"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:fontFamily="@font/poppins_medium"
                android:text="Tên Sản Phẩm"
                android:textColor="@color/gray"
                android:textSize="20sp" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_tien_giohang"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:fontFamily="@font/poppins_medium"
                    android:gravity="center"
                    android:text="Số Tiền: "
                    android:textColor="#252525"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/tv_gia_giohang"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:fontFamily="@font/poppins_medium"
                    android:gravity="center"
                    android:text="29.999.999 "
                    android:textColor="#232323"
                    android:textSize="18dp" />
                <TextView
                    android:id="@+id/vndd"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:fontFamily="@font/poppins_medium"
                    android:gravity="center"
                    android:layout_marginLeft="5dp"
                    android:text="VNĐ"
                    android:textColor="#232323"
                    android:textSize="18dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">
                <TextView
                    android:id="@+id/tvsoluong"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Số Lượng: "
                    android:textColor="#024B85"
                    android:textSize="17dp" />
                <ImageView
                    android:id="@+id/trugio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/tru" />

                <TextView
                    android:id="@+id/soluonggio"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textAlignment="center" />

                <ImageView
                    android:id="@+id/conggio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/cong" />
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/dienthoaicach"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">


    <ImageView
        android:id="@+id/itemdh"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/itemtendh"
        android:layout_width="242dp"
        android:layout_height="58dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Tên Điện Thoai"
        android:textColor="#555555"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/itemdh"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/itemgiadh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="70dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Gia"
        android:textAlignment="textStart"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/itemdh"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/vndsd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="70dp"
        android:fontFamily="@font/poppins_medium"
        android:gravity="center"
        android:text="VNĐ"
        android:textColor="#232323"
        android:textSize="20dp"
        app:layout_constraintStart_toEndOf="@+id/itemgiadh"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/itemtrangthai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Trạng Thái"
        android:textColor="#074C83"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/itemdh"
        app:layout_constraintTop_toBottomOf="@+id/itemgiadh" />

    <TextView
        android:id="@+id/btn_huy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/btn"
        android:text="Hủy"
        android:textColor="@color/red"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/itemtongtien"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="MissingConstraints,TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/itemtongtien"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="7dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Tổng Tiền(1 Sản Phẩm): 9999"
        android:textColor="#020202"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@+id/itemdh"
        app:layout_constraintTop_toBottomOf="@+id/itemtrangthai"
        tools:ignore="MissingConstraints" />
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="165dp"
        android:background="@drawable/dienthoaicach"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

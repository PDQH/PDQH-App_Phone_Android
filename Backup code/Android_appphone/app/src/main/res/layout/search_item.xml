<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/cim"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tencim"
        android:layout_width="242dp"
        android:layout_height="58dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Tên Điện Thoai"
        android:textColor="#0D5A9E"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/cim"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tiencim"
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="70dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Gia"
        android:textAlignment="textStart"
        android:textColor="#750A1F"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/cim"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/vndsd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="70dp"
        android:fontFamily="@font/poppins_medium"
        android:gravity="center"
        android:text="VNĐ"
        android:textColor="#750A1F"
        android:textSize="20dp"
        app:layout_constraintStart_toEndOf="@+id/tiencim"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/ctcim"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="103dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Chi Tiết"
        android:textColor="#7A7879"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@+id/cim"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="145dp"
        android:background="@drawable/dienthoaicach"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/anhdtthongtin"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/logovip2" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tendtthongtin"
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:text="Samsung Galaxy Pro Dual 1280"
                android:textSize="20sp" />

            <TextView
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:id="@+id/tongtienthongtin"
            android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
            android:text="Tổng Tiền : 59.000.000"
            android:textSize="20sp"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/info_cust"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="Thông Tin Khách Hàng :"
            android:textColor="@color/text_color"
            android:textSize="20sp"></TextView>

        <EditText
            android:id="@+id/nhaptenngmua"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/info_cust"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/custom_edit_text"
            android:drawableLeft="@drawable/ic_baseline_account_box_24"
            android:drawablePadding="10dp"
            android:fontFamily="sans-serif-light"
            android:hint="Họ Tên"
            android:padding="10dp"
            android:textColor="@color/text_color"
            android:textSize="17sp"></EditText>

        <EditText
            android:id="@+id/nhapdiachi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nhaptenngmua"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/custom_edit_text"
            android:drawableLeft="@drawable/ic_baseline_home_work_24"
            android:drawablePadding="10dp"
            android:fontFamily="sans-serif-light"
            android:hint="Địa Chỉ"
            android:padding="10dp"
            android:textColor="@color/text_color"
            android:textSize="17sp"
            tools:ignore="TouchTargetSizeCheck"></EditText>

        <EditText
            android:id="@+id/nhapsodt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nhapdiachi"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/custom_edit_text"
            android:drawableLeft="@drawable/ic_baseline_local_phone_24"
            android:drawablePadding="10dp"
            android:fontFamily="sans-serif-light"
            android:hint="Số Điện Thoại"
            android:inputType="phone"
            android:padding="10dp"
            android:textColor="@color/text_color"
            android:textSize="17sp"
            tools:ignore="TouchTargetSizeCheck"></EditText>

        <Button
            android:id="@+id/btn_xacnhan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nhapsodt"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            android:layout_gravity="center"

            android:background="@drawable/custom_button"
            android:backgroundTint="@null"
            android:text="Đặt Hàng"
            app:backgroundTint="@null"></Button>
    </LinearLayout>

</LinearLayout>